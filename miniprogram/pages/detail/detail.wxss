.detail-container {
  height: 400rpx;
  filter: blur(40rpx);
  opacity: 0.4;
}

.detail-mask {
  position: absolute;
  width: 100%;
  height: 400rpx;
  background-color: #333;
  top: 0;
  left: 0;
  z-index: -1;
}

.detail-info {
  display: flex;
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 400rpx;
  padding: 40rpx;
}

.detail-img {
  width: 240rpx;
  height: 320rpx;
  border-radius: 10rpx;
  margin-right: 40rpx;
}

.detail {
  font-size: 24rpx;
  color: white;
}
.detail view {
  margin-bottom: 10rpx;
}
.detail-title{
  font-size: 40rpx;
  font-weight: 700;
  padding-bottom: 10rpx;
}
.casts{
  width: 430rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow:ellipsis;
}
.detial-like, .detail-look{
  width: 150rpx;
  height: 50rpx;
  margin: 20rpx 40rpx 0 0;
  line-height: 50rpx;
  text-align: center;
  float: left;
  font-size: 28rpx;
  color: #000;
  background-color: white;
  border-radius: 5rpx;
}
.detail-other{
  padding: 40rpx;
}

.summary{
  margin-bottom: 80rpx ;
}
.summary1{
  font-size: 36rpx;
  font-weight: 700
}
.text{
  font-size: 26rpx;
  margin-top: 20rpx;
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  word-wrap: break-word;
  white-space: normal !important;
  -webkit-line-clamp: 4;
  -webkit-box-orient: vertical;
}
.textMore{
  font-size: 26rpx;
  margin-top: 20rpx;
}
.unfold{
  float: right;
  font-size: 28rpx;
  color: #666;
}

.comments {
  position: relative;
}
.short {
  font-size: 36rpx;
  font-weight: 700;
}
image {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
}
.comment {
  position: relative;
  border-bottom: 1px solid #eee;
  padding: 30rpx 0;
}
.comment-name {
  font-weight: 700;
  font-size: 28rpx;
  position: absolute;
  top: 30rpx;
  left: 70rpx;
}
.comment-time {
  font-size: 18rpx;
  position: absolute;
  top: 70rpx;
  left: 175rpx;
}
.comment .van-rate {
  position: absolute;
  top: 50rpx;
  left: 65rpx;
}
.van-rate__item {
padding: 0 1px!important;
}
.content{
  margin-top: 10rpx;
  font-size: 24rpx;
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  word-wrap: break-word;
  white-space: normal !important;
  -webkit-line-clamp: 6;
  -webkit-box-orient: vertical;
}
.contentMore{
  margin-top: 10rpx;
  font-size: 24rpx;
}






